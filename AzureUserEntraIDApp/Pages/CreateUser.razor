@page "/createuser"
@using System.Net.Http
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager Navigation

<h3>Create User</h3>

@if (successMessageVisible)
{
    <div class="alert alert-success" role="alert">
        User Created Successfully
    </div>
}

<EditForm Model="newUser" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="displayName" class="form-label">Display Name</label>
        <InputText id="displayName" class="form-control" @bind-Value="newUser.DisplayName" />
    </div>
    <div class="mb-3">
        <label for="mailNickname" class="form-label">Mail Nickname</label>
        <InputText id="mailNickname" class="form-control" @bind-Value="newUser.MailNickname" />
    </div>
    <div class="mb-3">
        <label for="userPrincipalName" class="form-label">User Principal Name</label>
        <InputText id="userPrincipalName" class="form-control" @bind-Value="newUser.UserPrincipalName" />
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <InputText id="password" type="password" class="form-control" @bind-Value="newUser.Password" />
    </div>

    <button type="submit" class="btn btn-primary">Create User</button>
</EditForm>

@code {

    private User newUser = new User();
    private bool successMessageVisible = false;

    private async Task HandleValidSubmit()
    {
        var response = await Http.PostAsJsonAsync("/api/CreateUser", newUser);
        if (response.IsSuccessStatusCode)
        {
            successMessageVisible = true;
        }
        else
        {
            // Handle error
        }
    }

    public class User
    {
        public string DisplayName { get; set; }
        public string MailNickname { get; set; }
        public string UserPrincipalName { get; set; }
        public string Password { get; set; }
    }


    
}
