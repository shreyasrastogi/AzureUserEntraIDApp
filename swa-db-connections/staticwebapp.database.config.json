{
    "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
    "data-source": {
        "database-type": "mssql",
        "options": {
            "set-session-context": false
        },
        "connection-string": "@env('DATABASECONNECTIONSTRING')"
    },
    "runtime": {
        "rest": {
            "enabled": true,
            "path": "/rest"
        },
        "graphql": {
            "allow-introspection": true,
            "enabled": true,
            "path": "/graphql"
        },
        "host": {
            "mode": "production",
            "cors": {
                "origins": [ "http://localhost:4280" ],
                "allow-credentials": false
            },
            "authentication": {
                "provider": "StaticWebApps"
            }
        }
    },
    "entities": {
        "Person": {
            "source": "dbo.UserFeedback",
            "permissions": [
                {
                    "actions": [ "*" ],
                    "role": "anonymous"
                }
            ]
        }
    }
}